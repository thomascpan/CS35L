#! /bin/sh

string1="\0\1\2\3\4\5\6\7\
\10\11\12\13\14\15\16\17\
\20\21\22\23\24\25\26\27\
\30\31\32\33\34\35\36\37\
\40\41\42\43\44\45\46\47\
\50\51\52\53\54\55\56\57\
\60\61\62\63\64\65\66\67\
\70\71\72\73\74\75\76\77\
\100\101\102\103\104\105\106\107\
\110\111\112\113\114\115\116\117\
\120\121\122\123\124\125\126\127\
\130\131\132\133\134\135\136\137\
\140\141\142\143\144\145\146\147\
\150\151\152\153\154\155\156\157\
\160\161\162\163\164\165\166\167\
\170\171\172\173\174\175\176\177"

string2="\52\53\50\51\56\57\
\54\55\42\43\40\41\46\47\
\44\45\72\73\70\71\76\77\
\74\75\62\63\60\61\66\67\
\64\65\12\13\10\11\16\17\
\14\15\2\3\0\1\6\7\
\4\5\32\33\30\31\36\37\
\34\35\22\23\20\21\26\27\
\24\25\152\153\150\151\156\157\
\154\155\142\143\140\141\146\147\
\144\145\172\173\170\171\176\177\
\174\175\162\163\160\161\166\167\
\164\165\112\113\110\111\116\117\
\114\115\102\103\100\101\106\107\
\104\105\132\133\130\131\136\137\
\134\135\122\123\120\121\126\127\
\124\125"

if [ "$1" == '-f' ]
then
    tr "$string1" "$string2" | sort -f | tr "$string2" "$string1"
else
    tr "$string1" "$string2" | sort | tr "$string2" "$string1"
fi

